<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context="com.candeapps.thenyansacomplete.devicesearch.DeviceSearchActivity" >

    <FrameLayout
        android:id="@+id/device_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <FrameLayout
        android:id="@+id/device_location_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_search_container"/>
</RelativeLayout>
