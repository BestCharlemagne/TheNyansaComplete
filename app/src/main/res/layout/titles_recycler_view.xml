<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple"
    android:animateLayoutChanges="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purple"
        android:layout_marginTop="@dimen/recycle_vert_margin"
        android:layout_marginBottom="@dimen/recycle_vert_margin"
        android:layout_marginStart="@dimen/recycle_recursive_margin"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="32sp"
            android:id="@+id/megaTitle"
            android:visibility="gone"
            />
    <Button
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nothing"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/full_title"
        android:background="@color/light_purple"
        />

        <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:background="@color/purple"
        android:visibility="gone"
        >
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
