<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/recycle_vert_margin"
    android:layout_marginBottom="@dimen/recycle_vert_margin"
    >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_purple"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/recycle_horiz_margin"
        android:paddingEnd="@dimen/recycle_horiz_margin"
        android:id="@+id/holderId"
        android:clickable="true"
        android:focusable="true">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/subtitle"
            android:textAppearance="?android:attr/textAppearanceSearchResultTitle"
            android:textColor="@color/white"
            android:id = "@+id/sub_title"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/nothing"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:id = "@+id/body"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:background="@color/purple"
            android:visibility="gone"
            android:layout_marginTop="@dimen/recycle_vert_margin"
            android:layout_marginBottom="@dimen/recycle_vert_margin"
            android:layout_marginStart="@dimen/recycle_recursive_margin"
            >
        </android.support.v7.widget.RecyclerView>

</LinearLayout>
